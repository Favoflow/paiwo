{% block body %}
<script>
 window.location.href="/register_recommend";
</script>
<div class="main_content">
    <div class="blank"></div>
    <div class="box_mail">
       <span class="set_success_ico"></span>
        <div class="head_success">
            <div class="email_success">邮箱验证成功！</div>
            <div><span id="left_time">5</span> 秒后跳转到首页。</div>
        </div>
        <div class="jump"><a href="/">立即跳转</a></div>
    </div>
</div>

<script type="text/javascript">
    window.location.href="/register_recommend";
    $(document).ready(function() {
        function to_jump() {
            var o = $("#left_time");
            var times = 5;
            function time(){
                if(times == 0){
                    
                
                        window.location.href="/register_recommend";
                
                }else{
					 times--;
					o.html(times);
				}
               setTimeout(function(){time();}, 1000);
            }
            setTimeout(function(){time();}, 1000);
        }
        to_jump();
    });
</script>
<script src="/static/js/com/common.js"></script>
<script type="text/javascript" src="/static/js/side.js"></script>
{% end %}