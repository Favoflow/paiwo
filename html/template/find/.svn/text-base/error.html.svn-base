{% extends "../base.html" %}

{% block title %}
<title>邮件失效 - 拍我网</title>
{% end %}

{% block css %}
<link rel="stylesheet" href="/static/css/reset.css">
<link rel="stylesheet" href="/static/css/navi.css">
<link rel="stylesheet" href="/static/css/emailSend.css">
{% end %}


{% block top_bar %}
{% include "../top_tab.html" %}
{% end %}

{% block side %}
{% include "../side.html" %}
{% end %}

{% block body %}
<div class="main_content">
    <div class="blank"></div>
    <div class="box_mail">
       <span class="set_error_ico"></span>
        <div class="head_success">
            <div class="email_success">邮件验证链接已失效！</div>
            <div><span id="left_time">5</span>秒后跳转到登录页</div>
        </div>
        <div class="jump"><a href="/login">点击跳转</a></div>
    </div>
</div>
<script type="text/javascript">
    $(document).ready(function() {
        function to_jump() {
            var o = $("#left_time");
            var times = 5;
            function time(){
                if(times == 0){
                    window.location.href="/login";
                }else{
					 times--;
					o.html(times);
				}
               setTimeout(function(){time();}, 1000);
            }
            setTimeout(function(){time();}, 1000);
        }
        to_jump();
    });
</script>
<script src="/static/js/com/common.js"></script>
<script type="text/javascript" src="/static/js/side.js"></script>
{% end %}