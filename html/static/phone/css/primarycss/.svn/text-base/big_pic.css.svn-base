/*big_pic*/
.big_pic{ 
  width:100%; 
}
.big_pic_main {
  margin: 40px auto 0;
  background:#fff;
}
.big_pic_img { position: relative;}
.big_pic_img img{
    width:100%;
    height:auto;
}
.big_pic_info {
  width:100%;
  padding-top:10px;
  position:relative;
}

.more_info i{
  display:inline-block;
  width:20px;
  height:20px;
}
.more_info_main li {
  display:block;
  text-align:center;
}
.more_info_main i {
  display: block;
  text-align: center;
  font-size: 0.26rem;
  line-height: 0.39rem;
}
.more_info_main h4{
  width: 220px;
  text-align: center;
  font-size: 0.39rem;
  color: #414141;
  line-height: 0.6rem;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  margin: 0 auto;
}
.more_info_main .author {
    font-size: 0.3rem;
}
.big_pic_ava a { display: block;}
.big_pic_ava img {
    width: 1.3rem;
    height: 1.3rem;
    border-radius: 50%;
}
.big_pic_ava { margin-top: 0.95rem;}
/*收藏与赞*/
.big_pic_func {
  width: 3.696rem;
  margin: 0 auto 12px;
}
.big_pic_func:after {
  display: block;
  content: "";
  clear: both;
}
.big_pic_coll,.big_pic_like {
  width: 1.74rem;
  height: 0.783rem;
  font-size: 0.304rem;
  line-height: 0.783rem;
}
.big_pic_coll {
  float: left;
  color: #414141;
  border: 1px solid #414141;
}
.big_pic_like {
  float: right;
  color: #ff475c;
  border: 1px solid #ff475c;
}
.big_pic_coll i,.big_pic_like i{
  float: left;
  width: 0.6rem;
  height: 0.8rem;
  background:url(/static/phone/images/spirit_mobile.svg) no-repeat;
  background-size:5.783rem auto;
}
.big_pic_coll i { background-position: -1.043rem -1.93rem;}
.big_pic_like i { background-position: -1.848rem -1.913rem;}
.big_pic_coll span,.big_pic_like span {
  text-align: center;
  width: 0.8rem;
  float: left;
}
.big_pic_coll span { text-align: right;}
/*分享*/
.more_info_main .big_pic_share {
  display: none;
  margin-top: 28px;
  border-top: 1px solid #f5f5f5;
}
.spec_share_main {
  width: 248px;
  text-align: center;
  background: #fff;
  padding: 10px 0;
  margin: 0 auto; 
}
.spec_share_main:after {
  display: block;
  clear: both;
  content: "";
}
.spec_share_main span { 
  float: left;
  font-size: 12px;
  line-height: 30px;
  color: #b6b3aa;
}
.spec_share_main a {
  float: left;
  width: 30px;
  height: 30px;
  margin: 0 5px;
  text-align: center;
  border: 1px solid #d8d6d0;
  border-radius: 50%;
}
.spec_share_main i {
  display: inline-block;
  width: 30px;
  height: 30px;
  background:url(/static/phone/images/spirit_mobile.svg) no-repeat;
  background-size:266px auto;
}
.spec_share_main .sina i   { background-position: 6px -62px;}
.spec_share_main .weixin i { background-position:-27px -62px;}
.spec_share_main .friend i { background-position:-60px -62px;}
.spec_share_main .qq i     { background-position:-93px -62px;}
.spec_share_main .qzone i  { background-position:-128px -62px;}
.may_like { 
    padding: 0 0.348rem;
    margin-top: 70px;
}
.may_like h2 {
  position: relative;
  width: 100%;
  margin-bottom: 36px;
  height: 0;
  border-bottom: 1px solid #D8D6D0;
}
.may_like h2 span {
    position: absolute;
    top: -0.4rem;
    left: 50%;
    margin-left: -0.91rem;
    width: 1.82rem;
    height: 0.87rem;
    line-height: 0.87rem;
    font-size: 0.3rem;
    background: #fff;
    text-align: center;
}
.like-photos { 
  width: 100%;
  overflow: hidden;
}

/*左右箭头*/
.big_pic_left,.big_pic_right {
    opacity: 0;
    position: absolute;
    top: 0;
    width: 50px;
    height: 100%;
    background: rgba(0,0,0,.4);
}
.big_pic_left { left: 0;}
.big_pic_right { right: 0;}
.big_pic_left i,.big_pic_right i {
    position: absolute;
    top: 50%;
    left: 10px;
    width: 30px;
    height: 30px;
    margin-top: -15px;
}
.big_pic_left i { 
    background: url(/static/phone/images/left.svg) no-repeat;
    background-size: cover;
}
.big_pic_right i { 
    background: url(/static/phone/images/right.svg) no-repeat;
    background-size: cover;
}

/*loading*/
.big-loading {
    display: block;
    margin: 0 auto;
    padding: 95px 0;
    width: 60px;
    height: 60px;
    background: url(/static/phone/images/loadingPic.gif) no-repeat center; 
    background-size: 50px 50px; 
    
}