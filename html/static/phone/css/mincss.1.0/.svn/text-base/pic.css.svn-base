.big_pic_img {
	position: relative;
}

/*左右箭头*/
.big_pic_left,
.big_pic_right {
	opacity: 0;
	position: absolute;
	top: 0;
	width: 15%;
	height: 100%;
	background-color: rgba(42,43,45,.4);
}
.big_pic_left { left: 0;}
.big_pic_right { right: 0;}

.big_pic_left i,
.big_pic_right i {
	position: absolute;
	width: 1rem;
	height: 1rem;
	top: 50%;
	left: 50%;
	margin: -0.5rem 0 0 -0.5rem;
	opacity: .6;
}
.big_pic_left i {
	background: url(/static/phone/images/left.svg) no-repeat center;
	background-size: 80% auto;
}
.big_pic_right i { 
	background: url(/static/phone/images/right.svg) no-repeat center;
	background-size: 80% auto;
}